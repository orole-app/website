---
import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";

export interface Props {
	prevUrl: string;
	nextUrl: string;
	prevText?: string;
	nextText?: string;
	class?: string;
}

const { prevUrl, nextUrl, class: className } = Astro.props;
---

{
	(prevUrl || nextUrl) && (
		<div class:list={["container flex", className]}>
			<div class="flex flex-row mx-auto container justify-center gap-8">
				<Link href={prevUrl} style="muted" class={`${!prevUrl ? "invisible" : ""}`}>
					<div class="flex flex-row align-middle">
						<Icon name="tabler:chevron-left" class="w-6 h-6" />
						<p class="ml-2">Previous</p>
					</div>
				</Link>
				<Link href={nextUrl} style="muted" class={`${!nextUrl ? "invisible" : ""}`}>
					<div class="flex flex-row align-middle">
						<span class="mr-2">Next</span>
						<Icon name="tabler:chevron-right" class="w-6 h-6" />
					</div>
				</Link>
			</div>
		</div>
	)
}
