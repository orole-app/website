---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import { localizePath } from "astro-i18next";

const title = `Error 404`;
---

<Layout lang="en" title="404">
	<section class="flex items-center h-full p-16">
		<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
			<div class="max-w-md text-center">
				<h2 class="mb-8 font-bold text-9xl">
					<span class="sr-only">Error</span>
					<span class="text-primary dark:text-white">404</span>
				</h2>
				<p class="text-3xl font-semibold md:text-3xl dark:text-white mb-4">Sorry, we couldn't find this page.</p>
				<a rel="noopener noreferrer" href={localizePath("/")} class="btn ml-4 dark:text-gray-300">Back to homepage</a>
			</div>
		</div>
	</section>
</Layout>
