---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import { pwaInfo } from "virtual:pwa-info";
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import AOS from "aos";
import "aos/dist/aos.css";

export interface Props {
	title?: string;
	lang?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/meta/opengraph.png", Astro.site).toString();

// replaced dynamically
// @ts-ignore
const buildDate = __DATE__;

const { title, lang = null } = Astro.props;

const makeTitle = title ? title + " | " + "Orole" : "Orole - Your web development agency";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#ffffff" />

		<ViewTransitions />

		<!-- Global CSS -->
		<link rel="stylesheet" href="/index.css" />

		<SEO
			title={makeTitle}
			description="Boost your online presence with ease"
			canonical={canonicalURL}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: "website",
					title: `Orole - Boost your online presence with ease`,
					image: resolvedImageWithDomain,
				},
				image: {
					alt: "Orole Homepage Screenshot",
				},
			}}
		/>

		{pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
		<script src="/src/pwa.ts"></script>
	</head>
	<body class="dark:bg-stone-950">
		<Navbar />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>

		<script src="../components/aos.js"></script>
	</body>
</html>
